<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/pagebg1"
    tools:context=".MainMenu">
    


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/app_logo"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="369dp"
        android:layout_height="143dp"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="50dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pagebg2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:outlineAmbientShadowColor="@color/nibm_blue"
            android:textColor="@color/nibm_blue"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="20sp"
            android:layout_marginStart="20sp"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"/>


        <Button
            android:id="@+id/signOutBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="240sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="10sp"
            android:backgroundTint="@color/nibm_blue"
            android:backgroundTintMode="add"
            android:text="Log Out"
            android:textSize="13sp"
            android:textAppearance="@dimen/cardview_default_elevation"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:elevation="20dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab"
            android:src="@drawable/baseline_add_24"
            android:backgroundTint="@color/white"
            android:layout_marginTop="70dp"
            android:layout_marginStart="270dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="name"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/nibm_blue"
            android:layout_marginTop="63dp"
            android:layout_marginStart="20sp"
            android:textSize="28sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:text="email"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:layout_marginTop="99dp"
            android:layout_marginStart="20sp"
            android:textSize="16sp"/>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="369dp"
        android:layout_height="340dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="18sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pagebg2">

            
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>